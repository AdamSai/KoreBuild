; EditorConfig.org

root = true

[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{shade}]
indent_size = 4

# Xml files
[*.{csproj,config,props,targets,ruleset,config,resx,xml}]
indent_size = 2

[*.{json, yml}]
indent_size = 2

[*.{ps1,sh}]
indent_size = 4
